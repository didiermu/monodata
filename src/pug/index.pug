extends includes/head.pug
block head-page
    title Monodata
    script(src='js/scroll-smooth.min.js' defer)
    script(src="js/animations-home.min.js" defer) 
    link(href='https://vjs.zencdn.net/7.20.3/video-js.css', rel='stylesheet')
    script(src='https://vjs.zencdn.net/7.20.3/video.min.js')


