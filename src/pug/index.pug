    -ruta = ""

    #viewport
        include includes/header
        main.home
            include includes/api

            section.hero
                .container-fluid
                    .hero--contain
                        h1.splt Arte. Tecnología. 
                        h2.splt Experiencias.
                        h2.splt Para cualquier audencia.


                .hero--video
                    .cursor.pause PAUSE VIDEO
                    .cursor.play PLAY VIDEO
                    video#video-desktop.video-js(muted playsinline preload loop poster="img/Reel_placeholder.jpg") 
                        source(src="video/TEASER_KIA-MOTION.mp4", type="video/mp4")

                    //- picture 
                    //-     source(srcset="img/Reel_placeholder.webp", type="image/webp")
                    //-     img.img-fluid.w-100(src="img/Reel_placeholder.jpg", alt="")

            section.projects
                .container-fluid
                    h2.splt Monodata Interactive Works es un estudio de diseño y arte digital con sede en la Ciudad de México. Creamos contenido y experiencias en espacios públicos desde un enfoque orientado al futuro integrando arte, diseño, desarrollo de software, nuevas tecnologías y sistemas interactivos.

                    a(href="#!") 
                        h3.icon-arrow-after Ver proyectos


            section.servicios
